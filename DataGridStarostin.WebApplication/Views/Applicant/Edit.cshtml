@using DataGridStarostin.Standart.Contracts.Models;
@model Applicant

@{
    ViewData["Title"] = "Изменить информацию абитуриента";
}

<h2>Изменить абитуриента</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Gender"></label>
        <select asp-for="Gender" class="form-control" asp-items="@(EnumHelper.GetEnumDescriptions(typeof(Gender)))"></select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Birthday"></label>
        <input asp-for="Birthday" type="date" class="form-control" />
        <span asp-validation-for="Birthday" class="text-danger"></span>
    </div>

     <div class="form-group">
        <label asp-for="Education"></label>
        <select asp-for="Education" class="form-control" asp-items="@(EnumHelper.GetEnumDescriptions(typeof(Education)))"></select>
        <span asp-validation-for="Education" class="text-danger"></span>
    </div>

     <div class="form-group">
        <label asp-for="Math"></label>
        <input asp-for="Math" class="form-control" />
        <span asp-validation-for="Math" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Russian"></label>
        <input asp-for="Russian" class="form-control" />
        <span asp-validation-for="Russian" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ComputerScience"></label>
        <input asp-for="ComputerScience" class="form-control" />
        <span asp-validation-for="ComputerScience" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary"
        style="margin-top: 15px">Сохранить абитуриента</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
